<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="address" class="com.pncn.beans.Address" p:addressLine1="101 Pritam Woods" p:addressLine2="Green Glien Layout" p:city="Bangaluru" p:state="Karnataka" p:zip="560103" p:country="India"/>
	
	<bean id="person" class="com.pncn.beans.Person" p:id="501" p:name="Manish Barnwal" c:address-ref="address"/>
</beans>
