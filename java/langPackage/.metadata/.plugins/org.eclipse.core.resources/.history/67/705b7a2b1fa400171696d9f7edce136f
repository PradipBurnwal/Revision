package com.itc.langStringPack;

public class Lab030getCharsgetBytes {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		String str = "ITCINDIA";
		char cArr[] = new char[10];
		byte bArr[] = new byte[10];
		cArr[0] = 'F';
		cArr[1] = 'M';
		cArr[2] = 'C';
		cArr[3] = 'G';
		str.getChars(3, 5, cArr, 5);
		//str.getBytes(3,7,bArr,4);
		System.out.println("\n**char Array**");
		for(int i=0;i<cArr.length;i++){
			char ch = cArr[i];
			System.out.println(i+"\t"+ch);
		}
		/*System.out.println("\n**byte array**");
		for(int i=0;i<bArr.length;i++){
			byte b = bArr[i];
			System.out.println(i+"\t"+b+"\t"+(char)b);
		}*/
		
		
	}

}
